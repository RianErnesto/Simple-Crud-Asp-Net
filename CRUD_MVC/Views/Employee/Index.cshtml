@{
    ViewData["Title"] = "Employees Page";
}
    
<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a role="button" class="btn btn-primary" asp-controller="Employee" asp-action="AddNewEmployee">Add Employee</a>
    </div>

    <h1 class="display-4">Employees Grid Page</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Title</th>
                <th scope="col">Hire Date</th>
                <th scope="col">Home Phone</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Mark Otto</td>
                <td>Senior-Partner</td>
                <td>05/06/2001</td>
                <td>(91)9999999</td>
                <td>
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-secondary" asp-controller="Employee" asp-action="EditEmployee">Edit</a>
                        <a role="button" class="btn btn-danger" asp-controller="Employee" asp-action="DeleteEmployee">Delete</a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>
