@model EmployeeModel

@{
    ViewData["Title"] = "Employees Edit Page";
}

<h1 class="display-4">Edit Employee</h1>

<form asp-controller="Employee" asp-action="EditEmployee" method="post">
    <input type="hidden" asp-for="EmployeeID" class="form-control" />
    <div class="mb-3">
        <label for="firstName" class="form-label">First Name</label>
        <input type="text" asp-for="FirstName" class="form-control" placeholder="Type the employee First Name">
        @Html.ValidationMessageFor(x => x.FirstName)
    </div>
    <div class="mb-3">
        <label for="lastName" class="form-label">Last Name</label>
        <input type="text" asp-for="LastName" class="form-control" placeholder="Type the employee Last Name">
        @Html.ValidationMessageFor(x => x.LastName)
    </div>
    <div class="mb-3">
        <label for="lastName" class="form-label">Title</label>
        <input type="text" asp-for="Title" class="form-control" placeholder="Type the employee Title">
        @Html.ValidationMessageFor(x => x.Title)
    </div>
    <div class="mb-3">
        <label for="titleCourtesy" class="form-label">Title of Courtesy</label>
        <input type="text" asp-for="TitleOfCourtesy" class="form-control" placeholder="Type the employee Title of Courtesy">
    </div>
    <div class="mb-3">
        <label for="homePhone" class="form-label">Home Phone</label>
        <input type="text" asp-for="HomePhone" class="form-control" placeholder="Type the employee Home Phone">
        @Html.ValidationMessageFor(x => x.HomePhone)
    </div>
    <div class="mb-3">
        <label for="birthDate" class="form-label">Birth Date</label>
        <input type="date" asp-for="BirthDate" class="form-control">
    </div>
    <div class="mb-3">
        <label for="hireDate" class="form-label">Hire Date</label>
        <input type="date" asp-for="HireDate" class="form-control">
    </div>
    <div class="mb-3">
        <label for="address" class="form-label">Address</label>
        <input type="text" asp-for="Address" class="form-control" placeholder="Type the employee Address">
    </div>
    <div class="mb-3">
        <label for="city" class="form-label">City</label>
        <input type="text" asp-for="City" class="form-control" placeholder="Type the employee City">
    </div>
    <div class="mb-3">
        <select class="form-select" asp-for="Region" aria-label="Default select example">
            <option selected>Region</option>
            <option value="1">America</option>
            <option value="2">Europe</option>
            <option value="3">Asia</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="postalCode" class="form-label">Postal Code</label>
        <input type="text" asp-for="PostalCode" class="form-control" placeholder="Type the employee Postal Code">
    </div>
    <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input type="text" asp-for="Country" class="form-control" placeholder="Type the employee Country">
    </div>

    <button type="submit" class="btn btn-primary btn-block">Submit</button>
    <a role="button" class="btn btn-secondary btn-block" asp-controller="Employee" asp-action="Index">Back</a>
</form>
